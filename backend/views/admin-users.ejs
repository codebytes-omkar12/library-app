<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
            <h1><%= title %></h1>
            <a href="/books" class="btn btn-secondary">Back to Library</a>
        </div>
        <hr>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(u => { %>
                    <tr>
                        <td><%= u.username %></td>
                        <td><%= u.email %></td>
                        <td>
                            <form action="/admin/users/update-roles/<%= u.user_id %>" method="POST">
                                <% allRoles.forEach(role => { %>
                                    <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="checkbox" name="roles" value="<%= role.role_id %>"
                                            <% if (u.roles && u.roles.split(',').includes(role.role_name)) { %>
                                                checked
                                            <% } %>
                                        >
                                        <label class="form-check-label"><%= role.role_name %></label>
                                    </div>
                                <% }); %>
                        </td>
                        <td>
                                <button type="submit" class="btn btn-primary btn-sm">Update</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>