<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    
    <div class="container mt-4">
        <div class="d-flex justify-content-between align-items-center">
    <h1><%= title %></h1>
    <div>
        <% if (user && user.roles.includes('Librarian')) { %>
            <a href="/books/new" class="btn btn-primary">Add New Book</a>
        <% } %>
        <form action="/logout" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-secondary">Logout</button>
        </form>
    </div>
</div>
        <hr>
        <table class="table table-striped mt-3">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>Available</th>
                </tr>
            </thead>
            <tbody>
                <% if (books.length > 0) { %>
                    <% books.forEach(book => { %>
                        <tr>
                            <td><%= book.title %></td>
                            <td><%= book.author %></td>
                            <td><%= book.quantity_available %></td>
                            <td><% if (user && user.roles.includes('Librarian')) { %>
                    <a href="/books/edit/<%= book.book_id %>" class="btn btn-warning btn-sm">Edit</a>
                    <button class="btn btn-danger btn-sm delete-btn" data-id="<%= book.book_id %>">
                        Delete
                    </button>
                <% } %></td>
                        </tr>
                    <% }); %>
                <% } else { %>
                    <tr>
                        <td colspan="3" class="text-center">No books found in the library.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

</body>
</html>